<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="Select Date"
            android:id="@+id/tvDate"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"/>
        <LinearLayout
            android:id="@+id/arrow_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvDate"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/left_navi"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="@string/leftNavi"
                android:textSize="30sp"
                android:gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat"></TextView>
            <TextView
                android:id="@+id/right_navi"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text=">"
                android:textSize="30sp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:gravity="center_horizontal"></TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignTop="@id/tvDate"
            android:layout_marginTop="40dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="20dp"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/btn_expense"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:padding="10dp"
                android:text="Expense\n 0.00 CAD"
                android:background="#b71c1c"
                android:textColor="#FFEB3B"
                android:clickable="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:lineSpacingExtra="@dimen/activity_vertical_margin"
                android:maxLines="2"
                android:layout_marginRight="8dp">
            </Button>

            <Button
                android:id="@+id/btn_income"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:padding="10dp"
                android:clickable="true"
                android:background="#16821A"
                android:textColor="#FFEB3B"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Income\n 0.00 CAD"
                android:lineSpacingExtra="@dimen/activity_vertical_margin"
                android:maxLines="2"
                android:layout_marginLeft="16dp">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/linear1"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:paddingTop="5dp">

            <Button
                android:id="@+id/btn_youOwe"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:padding="10dp"
                android:text="You Owe\n 0.00 CAD"
                android:background="#A2481F"
                android:textColor="#FFEB3B"
                android:clickable="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:lineSpacingExtra="@dimen/activity_vertical_margin"
                android:maxLines="2"
                android:layout_marginRight="8dp">
            </Button>

            <Button
                android:id="@+id/btn_uouOwed"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:padding="10dp"
                android:clickable="true"
                android:background="#475EDB"
                android:textColor="#FFEB3B"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="You are Owed\n 0.00 CAD"
                android:lineSpacingExtra="@dimen/activity_vertical_margin"
                android:maxLines="2"
                android:layout_marginLeft="16dp">
            </Button>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/linear2"

            android:paddingTop="5dp">

            <TextView
                android:id="@+id/budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Budget:     "
                android:textColor="#000000"
                android:clickable="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:lineSpacingExtra="@dimen/activity_vertical_margin"
                android:maxLines="2"
                android:layout_marginRight="8dp">
            </TextView>

            <TextView
                android:id="@+id/budget_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                android:textColor="#050500"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="0.00 CAD"
                android:lineSpacingExtra="@dimen/activity_vertical_margin"
                android:layout_marginLeft="8dp">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/linear3"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Balance:     "
                android:textColor="#000000"
                android:clickable="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:lineSpacingExtra="@dimen/activity_vertical_margin"
                android:maxLines="2"
                android:layout_marginRight="8dp">
            </TextView>

            <TextView
                android:id="@+id/balance_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                android:textColor="#050500"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="0.00 CAD"
                android:lineSpacingExtra="@dimen/activity_vertical_margin"
                android:gravity="right">
            </TextView>

        </LinearLayout>

    </RelativeLayout>


</FrameLayout>
